@using MamaBurger.Classes.Entites;
@using MamaBurger.Classes.Enums;
@using MamaBurger.Areas.Admin.Controllers
@model List<Menu>



<h1>Menüler</h1>

<div class="row">


    <table class="table table-hover table-primary table-striped">
         
        @{
            int counter = 1;
        }

        @{
            foreach (Menu menu in Model)
        {
            <tr>
                <form asp-action="Index">
                    <td>@counter</td>

                   @* <td><img class="img-fluid" src="data:image/jpeg;base64,@Convert.ToBase64String(menu.Fotograf)" style="width:100px; height:100px;" alt="Resim" /></td>*@
                    <td>@menu.Adi</td>
                    <td>@menu.Fiyat</td>


                <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@menu.ID"> Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@menu.ID"> Sil</a>
                </td>
                    


                </form>
            </tr>
                counter++;
        }
        }
    </table>

</div>